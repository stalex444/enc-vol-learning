    "sections": [
      {
        "title": "DO",
        "items": [
          "Go to Group Lead for unusual situations",
          "Be living example of this work",
          "Shorten your refractory period",
          "Lead with love and humility",
          "Be on time (early = on time)",
          "Look for best in others",
          "Respect leadership team",
          "Follow guidelines with grace",
          "Respond with kindness and coherence",
          "Stay flexible and willing",
          "Support fellow volunteers"
        ]
      },
      {
        "title": "DO NOT",
        "items": [
          "Gossip or engage in negative conversations",
          "Create distractions during teachings",
          "Take things personally",
          "Share info contradicting teachings",
          "Serve under influence of substances",
          "Share confidential materials/schedules",
          "Use role for personal attention"
        ]
      },
      {
        "title": "Confidentiality Reminders",
        "items": [
          "Keep ALL aspects strictly confidential",
          "Dr. Joe's teachings = copyrighted",
          "Event schedule = not shared with participants",
          "Behind-scenes = private",
          "Participant experiences = protected",
          "What happens here, stays here"
        ]
      },
      {
        "title": "Dr. Joe's Space",
        "items": [
          "No meet-and-greets",
          "No personal requests/conversations",
          "No book signings",
          "Allow him to engage when HE'S ready",
          "Redirect to Customer Care"
        ]
      },
      {
        "title": "Photo Guidelines",
        "items": [
          "No recording Dr. Joe's presentations",
          "No photos during Walking Meditation",
          "No entering stage or photos with Dr. Joe",
          "Ask permission before photographing anyone",
          "Don't post photos without consent"
        ]
      }
    ]
